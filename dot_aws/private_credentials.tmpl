{{- $aws_access_key_id     := "" -}}
{{- $aws_secret_access_key := "" -}}
{{ if eq .category "home" -}}
{{- $aws_access_key_id     = (onepasswordDetailsFields "Personal AWS API" "" .home_vault).username.value -}}
{{- $aws_secret_access_key = (onepasswordDetailsFields "Personal AWS API" "" .home_vault).password.value -}}
{{ else if eq .category "work" -}}
{{- $aws_access_key_id     = (onepasswordDetailsFields "Work AWS API" "" .work_vault).username.value -}}
{{- $aws_secret_access_key = (onepasswordDetailsFields "Work AWS API" "" .work_vault).password.value -}}
{{ end -}}
[default]
aws_access_key_id={{ $aws_access_key_id }}
aws_secret_access_key={{ $aws_secret_access_key }}
