{{- $aws_access_key_id := "" -}}
{{- $aws_secret_access_key := "" -}}
{{ if eq .category "home" -}}
{{- $aws_access_key_id     = (index ((onepassword "Personal AWS API").details.fields) 1).value -}}
{{- $aws_secret_access_key = (index ((onepassword "Personal AWS API").details.fields) 0).value -}}
{{ end -}}
{{ if eq .category "tpt" -}}
{{- $aws_access_key_id     = (index (lastpass "Private/AWS API") 0).username -}}
{{- $aws_secret_access_key = (index (lastpass "Private/AWS API") 0).password -}}
{{ end -}}
[default]
aws_access_key_id={{ $aws_access_key_id }}
aws_secret_access_key={{ $aws_secret_access_key }}
