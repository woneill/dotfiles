{{- $expected_plugins_default := list "direnv" "golangci-lint" "golang" "hadolint" "helm" "helm-docs" "helmfile" "java" "kubectl" "maven" "nodejs" "poetry" "python" "ruby" "skaffold" "terraform" "terraform-docs" "terraformer|https://github.com/grimoh/asdf-terraformer.git" "tflint" "tfsec" "vault" -}}
{{- $expected_plugins := "" -}}
{{ if eq .category "home" -}}
{{- $expected_plugins = $expected_plugins_default | sortAlpha -}}
{{ else -}}
{{- $expected_plugins = $expected_plugins_default | sortAlpha -}}
{{ end -}}
#!/usr/bin/env zsh

if command -v asdf >/dev/null 2>&1; then
    typeset -A a2
    for k in $(asdf plugin list); do
        a2[$k]=1
    done

    for k in {{ range $expected_plugins }}{{ squote . }} {{ end }}; do
        plugin=("${(@s/|/)k}")
        if [ ! "${a2[$plugin[1]]}" ]; then
            asdf plugin add $plugin[1] $plugin[2]
        fi
        unset "a2[$plugin[1]]"
    done

    if [ ! -z "${(k)a2}" ]; then
        echo "ASDF plugins installed but not expected: ${(k)a2}"
    fi
fi
