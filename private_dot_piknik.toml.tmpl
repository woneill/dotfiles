{{ if eq .category "home" -}}
{{- $piknik_server := "127.0.0.1:8075" -}}
{{- $fileserver := printf "%s.%s:%d" .home_fileserver_hostname .home_domain_name 8075 -}}
{{- if eq .piknik_role "client" -}}
{{- $piknik_server = $fileserver -}}
{{- end -}}
{{ if eq .piknik_role "client" "hybrid" -}}
Connect   = "{{ $piknik_server }}"
{{ end -}}
{{ if eq .piknik_role "server" "hybrid" -}}
Listen    = "0.0.0.0:8075"
{{ end -}}
Psk       = "{{ (onepasswordItemFields "Piknik" "" .home_vault).Psk.value }}"
SignPk    = "{{ (onepasswordItemFields "Piknik" "" .home_vault).SignPk.value }}"
{{ if eq .piknik_role "client" "hybrid" -}}
SignSk    = "{{ (onepasswordItemFields "Piknik" "" .home_vault).SignSk.value }}"
{{ end -}}
{{ if eq .piknik_role "client" "hybrid" -}}
EncryptSk = "{{ (onepasswordItemFields "Piknik" "" .home_vault).EncryptSk.value }}"
{{ end -}}
{{ end -}}
