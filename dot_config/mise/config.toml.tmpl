{{- $osid := .chezmoi.os -}}
{{- if hasKey .chezmoi.osRelease "id" -}}
  {{- $osid = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}
[tools]
act = "0.2.82"
actionlint = "1.7.8"
atuin = "18.8.0"
container-structure-test = "1.21.1"
direnv = "2.37.1"
go = "1.25.3"
golangci-lint = "2.5.0"
hadolint = "2.14.0"
helm = "3.19.0"
helm-docs = "1.14.2"
helmfile = "1.1.7"
k9s = "0.50.15"
{{ if ne $osid "linux-qts" -}}
node = "25.0.0"
{{ end -}}
poetry = "2.2.1"
python = "3.14.0"
skaffold = "2.16.1"
{{ if eq .category "home" -}}
talhelper = "3.0.37"
talosctl = "1.11.3"
{{ end -}}
terraform = "1.13.4"
terraform-docs = "0.20.0"
terraformer = "0.8.30"
tflint = "0.59.1"
tfsec = "1.28.14"
trivy = "0.67.2"
yq = "4.48.1"

[settings]
idiomatic_version_file_enable_tools = ["ruby"]
